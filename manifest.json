{
    "manifest_version": 3,
    "name": "Rotify",
    "version": "1.0",
    "description": "To use your balkan rage and inner alpha to sigma up your current tab",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["activeTab", "scripting", "webRequest", "webNavigation","background"],
    "host_permissions": ["https://*/*", "http://*/*", "https://*.googleapis.com/*"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "images/gadagedi.png"
    },
    "web_accessible_resources": [{
        "resources": [
            "images/chillguy.png",
            "images/amogus.jpeg",
            "images/freak.jpg",
            "images/knee.jpeg",
            "images/lebron.png",
            "images/skibidi-toilet.jpg",
            "images/zucc.jpg",
            "images/squidwa.png",
            "images/the.JPG",
            "images/kneesurg.png",
            "images/pig.png",
            "images/thumbsup.png",
            "images/nah.png",
            "images/roblox.png",
            "images/mango.png",
            "images/thosewhoKnow.png",  
            "images/don.jpeg",
            "images/donpollo.png",
            "config.js"
        ],
        "matches": ["<all_urls>"]
    }]
}